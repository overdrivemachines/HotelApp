    </div>
    <div>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>    
  </div>
  <div class="field split">
    <div>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :fax %>
      <%= f.text_field :fax %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email %>
