<%= form_for(@reservation) do |f| %>
  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :arrival_date %><br>
    <%= f.date_select :arrival_date %>
  </div>
  <div class="field">
    <%= f.label :departure_date %><br>
    <%= f.date_select :departure_date %>
  </div>
  <div class="field">
    <%= f.label :adults %><br>
    <%= f.number_field :adults %>
  </div>
  <div class="field">
    <%= f.label :children %><br>
    <%= f.number_field :children %>
  </div>
  <div class="field">
    <%= f.label :room_type_id %><br>
    <%= f.collection_select(:room_type_id, current_user.property.room_types, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :room_id %><br>
    <%= f.collection_select(:room_id, current_user.property.rooms, :id, :room_number, include_blank: true) %>
  </div>
  <div class="field">
    <%= f.label :rate %><br>
    <%= f.text_field :rate %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>

  <%= fields_for :guest, @primary_guest do |guest_fields| %>
    <div class="field">
      <%= guest_fields.label :first_name %>
      <%= guest_fields.text_field :first_name %>
    </div>
    <div class="field">
      <%= guest_fields.label :last_name %>
      <%= guest_fields.text_field :last_name %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
